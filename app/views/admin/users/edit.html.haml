.page-header
  %h1
    =t :title_edit, :scope=>[:admin,:accounts]
    %small
      =@user.display_name
      .btn-group.pull-right
        = link_to admin_index_path, :class => 'btn' do
          %i.icon-arrow-left
          =t :back_admin, :scope=>[:nav_buttons]
        = link_to admin_users_path, :class => 'btn' do
          %i.icon-arrow-left
          =t :back_users, :scope=>[:nav_buttons]

= simple_form_for [:admin, @user], :html=>{:class=>'form-horizontal', :method => :put} do |f| 
  = render :partial => 'form', :locals => {:f => f, :text => t(:button_edit,:scope=>[:admin,:accounts])}
  =link_to t(:button_cancel), admin_users_path, :class => 'btn btn-danger'
