.page-header
  %h1
    =t(:referrals,:scope=>[:admin,:stats])
    %small
      =t(:referral_sub,:scope=>[:admin,:stats])
      .btn-group.pull-right
        = link_to admin_index_path, :class => 'btn' do
          %i.icon-arrow-left
          =t :back_admin, :scope=>[:nav_buttons]
        = link_to admin_stats_path, :class => 'btn' do
          %i.icon-arrow-left
          =t :back_stats, :scope=>[:nav_buttons]

%div
  = form_tag new_admin_stats_referrals_path, :method => :get do
    = render :partial => 'admin/stats/shared/simple_index'

%table.table{:width=>'100%'}
  %tr
    %th{:width=>'90%'}
      =t :referer, :scope=>[:admin,:stats]
    %th{:width=>'10%'}
      =t :count, :scope=>[:admin,:stats]
  -@data.each do |d|
    %tr
      %td{:width=>'90%'}
        =link_to d[0], d[0]
      %td{:width=>'10%'}
        =d[1]
