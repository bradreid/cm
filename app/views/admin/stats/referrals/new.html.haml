.page-header
  %h1
    HTTP Referral Report
    %small
      How visitors get to this site
      .btn-group.pull-right
        = link_to admin_index_path, :class => 'btn' do
          %i.icon-arrow-left
          =t :back_admin, :scope=>[:nav_buttons]
        = link_to admin_stats_path, :class => 'btn' do
          %i.icon-arrow-left
          Back to stats      

%div
  = form_tag new_admin_stats_referrals_path, :method => :get do
    = render :partial => 'admin/stats/shared/simple_index'

%table.table
  %tr
    %th
      HTTP Referrer
    %th
      Count
  -@data.each do |d|
    %tr
      %td
        =link_to d[0], d[0]
      %td
        =d[1]
