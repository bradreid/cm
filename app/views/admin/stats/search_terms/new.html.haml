
.page-header
  %h1
    =t :search, :scope=>[:admin,:stats]
    %small
      =t :search_sub, :scope=>[:admin,:stats]
  .btn-group.pull-right
    = link_to admin_index_path, :class => 'btn' do
      %i.icon-arrow-left
      =t :back_admin, :scope=>[:nav_buttons]
    = link_to admin_stats_path, :class => 'btn' do
      %i.icon-arrow-left
      =t :back_stats, :scope=>[:nav_buttons]

%div
  = form_tag new_admin_stats_search_terms_path, :method => :get do
    = render :partial => 'admin/stats/shared/simple_index'


%table.table
  %tr
    %th
      =t :term, :scope=>[:admin,:stats]
    %th
      =t :count, :scope=>[:admin,:stats]
  -@data.each do |d|
    %tr
      %td
        -if d[0].blank?
          "blank" - no search term present
        -else
          =d[0]
      %td
        =d[1]

= render :partial => 'admin/stats/shared/footer'
