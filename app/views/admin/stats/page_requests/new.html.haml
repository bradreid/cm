:javascript
  $(function(){
    var chart;
    $(document).ready(function() {
      data = eval("#{@data.to_json}");
      data2 = eval("#{@data2.to_json}");
    	chart = new Highcharts.Chart({
    		chart: {
    			renderTo: 'container',
    			zoomType: 'x',
    			type: 'spline'
    		},
    		title: {
    			text: 'Pages Requests and Unique Visitors'
    		},
    		subtitle: {
    			text: document.ontouchstart === undefined ?
    				'Click and drag in the plot area to zoom in' :
    				'Drag your finger over the plot to zoom in'
    		},
    		xAxis: {
    			type: 'datetime',
    			maxZoom: 7 * 24 * 3600000, // fourteen days
    			title: {
    				text: null
    			}
    		},
    		yAxis: {
    			title: {
    			        text: ''
    			},
    		},
    		tooltip: {
  			crosshairs: true,
  			shared: true
    		},
    		legend: {
    			enabled: true
    		},
    		plotOptions: {
    			spline: {
    				lineWidth: 4,
    				states: {
    					hover: {
    						lineWidth: 5
    					}
    				},
    				marker: {
    					enabled: false,
    					states: {
    						hover: {
    							enabled: true,
    							symbol: 'circle',
    							radius: 5,
    							lineWidth: 1
    						}
    					}
    				},
    			}    			
    		},

    		series: [{
    			type: 'spline',
    			name: 'Page Requests',
    			pointInterval: 24 * 3600 * 1000,
    			pointStart: Date.UTC("#{@start_date.year}", "#{@start_date.month - 1}", "#{@start_date.day}"),
    			data: data
    		},
        {
    			type: 'spline',
    			name: 'Unique Visitors',
    			pointInterval: 24 * 3600 * 1000,
    			pointStart: Date.UTC("#{@start_date.year}", "#{@start_date.month - 1}", "#{@start_date.day}"),
    			data: data2
    		}    		
    		]
    	});
    });
  });


