:javascript
  $(function(){
    var chart;
    $(document).ready(function() {
      data = eval("#{@data.to_json}");
      data2 = eval("#{@data2.to_json}");
    	chart = new Highcharts.Chart({
    		chart: {
    			renderTo: 'container',
    			zoomType: 'x',
    			type: 'spline'
    		},
    		title: {
    			text: 'Page Requests'
    		},
    		subtitle: {
    			text: document.ontouchstart === undefined ?
    				'Click and drag in the plot area to zoom in' :
    				'Drag your finger over the plot to zoom in'
    		},
    		xAxis: {
    			type: 'datetime',
    			maxZoom: 14 * 24 * 3600000, // fourteen days
    			title: {
    				text: null
    			}
    		},
    		yAxis: {
    			title: {
    				text: 'Page Requests'
    			},
    		},
    		tooltip: {
  			crosshairs: true,
  			shared: true
    		},
    		legend: {
    			enabled: false
    		},
    		plotOptions: {
    			area: {
    				fillColor: {
    					linearGradient: [0, 0, 0, 300],
    					stops: [
    						[0, Highcharts.getOptions().colors[0]],
    						[1, 'rgba(2,0,0,0)']
    					]
    				},
    				lineWidth: 1,
    				marker: {
    					enabled: false,
    					states: {
    						hover: {
    							enabled: true,
    							radius: 5
    						}
    					}
    				},
    				shadow: false,
    				states: {
    					hover: {
    						lineWidth: 1
    					}
    				}
    			}
    		},

    		series: [{
    			type: 'spline',
    			name: 'Page Requests',
    			pointInterval: 24 * 3600 * 1000,
    			pointStart: Date.UTC("#{@start_date.year}", "#{@start_date.month - 1}", "#{@start_date.day}"),
    			data: data
    		},
        {
    			type: 'spline',
    			name: 'Unique Visitors',
    			pointInterval: 24 * 3600 * 1000,
    			pointStart: Date.UTC("#{@start_date.year}", "#{@start_date.month - 1}", "#{@start_date.day}"),
    			data: data2
    		}    		
    		]
    	});
    });
  });


.page-header
  %h1
    =t :pagereqs, :scope=>[:admin,:stats]
    %small
      =t :pagereqs_sub, :scope=>[:admin,:stats]

%div
  = form_tag new_admin_stats_page_requests_path, :method => :get do
    = render :partial => 'admin/stats/shared/simple_index'

