-remote ||= false
- if @tools
  = page_entries_info @tools, :model => 'Tool'
  %br
  %br
  %table#search_results{:width => '100%', :border => '0', :cellspacing => 0}
    %tbody#tools_body
      -@tools.each do |tool|
        %tr
          %td{:align => 'left', :valign => 'top', :style => 'padding-bottom:20px'}
            %p{:style => 'white-space:nowrap;'}                                                      
              .stars{:style => 'background-position:-100px -260px;display:-moz-inline-box;display:inline-block;height:13px;width:65px;text-align:left;vertical-align:baseline;position:relative;top:1px'}
                .stars{:style => "background-position:-100px -275px;height:13px;width:#{((tool.rating.try(:round,1) || 0.0) * 13).to_s}px;overflow:hidden;text-align:left"}
              ="#{tool.rating.try(:round,1) ? '(' + tool.rating.try(:round,1).to_s + ')' :  ''}"
          %td{:valign => 'top'}
            &nbsp;
            =link_to(image_tag('icon_review.png', :height => 35, :alt => 'Review Tool'), new_tool_review_path(tool), :title => 'Review Tool')
            &nbsp; 
            &nbsp;
          %td{:align => 'left', :valign => 'middle', :style => 'padding-bottom:20px' }
            =link_to tool.name, tool_path(tool), :class => 'search_hit_title'
            %p
              =tool.description
          %td{:valign => 'top', :style => 'padding-bottom:20px'}
            %p{:style => 'white-space:nowrap;'}
              =link_to(image_tag('icon_tic.png', :height => 35, :alt => 'Tool Information Card'), tool_path(tool), :title => 'Tool Information Card')
              =link_to(image_tag('icon_pdf.png', :height => 35, :alt => 'Download Source Document'), tool.source_document.url, :title => 'Download Source Document') if tool.source_document_file_name

      %tr
        %td{:colspan => 6}
          -if remote
            = will_paginate(@tools, :renderer => 'RemoteLinkRenderer', :remote_url => phases_path(:format=> :js, :purpose => params[:purpose]))          
          -else
            = will_paginate @tools, :renderer => 'WillPaginateHelper::LinkRenderer'