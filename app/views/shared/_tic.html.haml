%h2
  = "#{@tool.name}"
  
%br
%br
%table.tic
  %tr
    %td.bold.big
      Description
  %tr
    %td
      %br
      =@tool.description
      %br
      %br
%table{:cellpadding => 0, :cellspacing => 0, :width => '100%'}
  %tr
    %td{:width => '50%', :valign => 'top'}
      %table.tic{:width => '100%'}
        %tr
          %td.notop.big.bold When
          %td.notop.big.noright.bold Why
          %td.notop.noleft
        -FormConstants.when.sort.each do |w|
          -size = FormConstants.send("#{w}_purpose".downcase).size
          %tr
            %td.notop{:rowspan => size}
              =w
            %td.notop.noright
              =FormConstants.send("#{w}_purpose".downcase).sort.first    
            %td.noleft.notop
              =check_box_tag :purpose, nil,  true if @tool.why == FormConstants.send("#{w}_purpose".downcase).sort.first
          -(1..(size - 1)).each do |i|
            %tr
              %td.noright
                = FormConstants.send("#{w}_purpose".downcase).sort[i]
              %td.noleft
                =check_box_tag :purpose, nil, true if @tool.why == FormConstants.send("#{w}_purpose".downcase).sort[i]
    %td{:valign => 'top', :width => '50%'}
      %table.tic{:width => '100%'}
        %tr
          %td.notop.noleft.noright.big.bold  Tool Details
          %td.notop.noleft
        %tr
          %td.noleft.noright
            Equipment	/	Facilities Needed
          %td.noleft
            =@tool.special_equipment_facilities
          
        %tr
          %td.noleft.noright
            Expertise Needed
          %td.noleft  
            =@tool.expertise_needed  
          
        %tr
          %td.noleft.noright
            Language
          %td.noleft
            =@tool.language

        %tr
          %td.noleft.noright
            Authors
          %td.noleft                
            =@tool.author
            
        %tr
          %td.noleft.noright
            Editors
          %td.noleft
            =@tool.editor

        %tr
          %td.noleft.noright
            This tool was made in
          %td.noleft                
            =@tool.where_created            


  
%br
%ul.show_list
  %li
    .label_for_list Source Document Title
    =@tool.source_document_name
    &nbsp;    
  %li
    .label_for_list Source Document Url
    =@tool.source_url
    &nbsp;    
  %li
    .label_for_list Expertise Needed
    =@tool.expertise_needed
    &nbsp;  
  %li
    .label_for_list Special Equipment/Facilities Needed
    =@tool.special_equipment_facilities   
    %br
    &nbsp;        
  %li
    .label_for_list Authors
    =@tool.author 
    &nbsp;    
  %li
    .label_for_list Editors
    =@tool.editor 
    &nbsp;    
  %li
    .label_for_list Publisher
    =@tool.publisher    
    &nbsp;    
  %li
    .label_for_list This tool was made in
    =@tool.where_created    
    &nbsp;    
  %li 
    .label_for_list Date Created
    ="#{Date::MONTHNAMES[@tool.date_created.try(:month)]} #{@tool.date_created.try(:year)}"
    &nbsp;    
  %li
    .label_for_list Language
    =@tool.language
    &nbsp;    
  %li
    .label_for_list Source Document
    =link_to(@tool.source_document_file_name, @tool.source_document.url) if @tool.source_document_file_name
    &nbsp;   
  %li
    .label_for_list File Size
    =@tool.source_document_file_size
    KB
    &nbsp;
  %li
    .label_for_list File Format
    =@tool.source_document_content_type
    &nbsp;
  %li
    .label_for_list Copyright
    =@tool.copyright=='1' ? "Yes" : "No"
    &nbsp;    
  %li
    .label_for_list Copyright Holder
    =@tool.copyright_holder
    &nbsp;
  %li
    .label_for_list Copyright Restrictions
    =@tool.copyright_restrictions
    &nbsp;
  %li
    .label_for_list Copyright Permissions
    =@tool.copyright_permissions=='1' ? "Yes" : "No"
    &nbsp;                  
  %li
    .label_for_list Description
    .description
      =simple_format @tool.description    
    &nbsp;  
%br
.clear_both


%h4 Topic (The triple bottom line)
%ul.show_list
  %li
    =@tool.topic     
    
%h4 Where (What types of communities can this tool be used to benefit?)
%ul.show_list
  %li
    =@tool.where
      
%h4 When (At what phase of the CED project cycle is this tool most useful?)
%ul.show_list
  %li
    =@tool.when
    %br
      
%h4 Why (What is the purpose of using this particular tool?)
%ul.show_list
  %li
    =@tool.why
    %br
    
%h4  Who (List the individuals, organizations and associations that are intended to use the tool)
%ul.show_list
  %li
    =@tool.who
    %br
    
%h4  Star-ranking
%br
%table
  %tr
    %th{:align => 'left', :valign => 'top', :width => 300}
      Stars
    %td{:align => 'left', :valign => 'top'}
      =@tool.rating.try(:round,2)
  %tr
    %th{:align => 'left', :valign => 'top'}
      Number of reviews
    %td{:align => 'left', :valign => 'top'}
      =@tool.rating_count
  %tr
    %th{:align => 'left', :valign => 'top'}
      Reviwers
    %td{:align => 'left', :valign => 'top'}
      =@tool.reviews.map{|r| r.user.try(:username)}.join("<br>").html_safe           
