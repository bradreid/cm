.topbar
  .fill
    .container
      %h3
        =link_to 'The Choice Matrix', root_path
      %ul
        -if current_user
          %li
            =link_to 'Admin', admin_root_path
        %li
          =link_to 'About', root_path(:anchor => 'about')
        %li
          =link_to 'Guided Selection'
        %li
          =link_to 'Search'          
        %li
          =link_to 'Reviews'
        %li
          =link_to 'Stats'
      -if defined? current_user    
        -if current_user
          %ul{:class => 'nav secondary-nav'}
            %li.menu
              =link_to current_user.username, "#", :class => 'menu open'
              %ul.menu-dropdown{:style => 'display:none'}
                %li
                  = link_to('Preferences', edit_user_registration_path)
                %li.divider
                %li
                  = link_to('Logout', destroy_user_session_path)
          -else  
            %ul{:class => 'nav secondary-nav'}
              %li
                =link_to('Login', new_user_session_path )
              %li
                = link_to('Register', new_user_registration_path)