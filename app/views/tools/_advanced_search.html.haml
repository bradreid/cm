          = text_field_tag :to, params[:to], :maxlength=> 4, :size => 4
          %br
          =t :datecreated_eg, :scope=>[:search,:search,:advanced]
      %tr
        %td
          =submit_tag t(:button_search, :scope => [:search,:search,:advanced]), :class => 'btn btn-primary'
