.page-header
  %h1
    Tool Review Form
    %small
      ="You are reviewing #{@tool.name}"

%table{:width => '75%'}
  %tr
    %td
      -form_for [@tool, @review], :builder => CmFormBuilder, :html => {:class => 'form-stacked'} do |f|
        = f.error_messages
        = render :partial => "form", :object => f
        %br
        = submit_tag "Submit your review", :class => "btn primary"
  
        = link_to "Cancel", tool_path(@tool), :class => "btn danger"
      %br
      %br