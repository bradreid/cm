.page-header
  %h1
    =t :title, :scope=>[:reviews,:edit]
    %small
      =t :subtitle, :scope=>[:reviews,:edit]
      =@review.tool.name

%table{:width => '75%'}
  %tr
    %td{:align => 'left'}
      -form_for [@review.tool, @review], :builder => CmFormBuilder, :html => {:class => 'form-stacked'} do |f|
        = f.error_messages
        = render :partial => "form", :object => f
        %br
        = submit_tag t(:button_update,:scope=>[:reviews,:edit]), :class => "btn primary"
  
        = link_to t(:button_cancel), tool_path(@tool), :class => "btn danger"
      %br
      %br
