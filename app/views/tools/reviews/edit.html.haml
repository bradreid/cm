.page-header
  %h1
    CED Tool Review Edit Form
    %small
      You are about to edit a review 
      =@review.tool.name

%table{:width => '75%'}
  %tr
    %td{:align => 'left'}
      -form_for [@review.tool, @review], :builder => CmFormBuilder, :html => {:class => 'form-stacked'} do |f|
        = f.error_messages
        = render :partial => "form", :object => f
        %br
        = submit_tag "Update the review", :class => "btn primary"
  
        = link_to "Cancel", tool_path(@tool), :class => "btn danger"
      %br
      %br