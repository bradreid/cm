.tabbable  
  %ul.nav.nav-tabs
    %li=link_to t(:button_basic,:scope=>[:search, :search]), '#basic_search', 'data-toggle'=>"tab"
    %li=link_to t(:button_advanced,:scope=>[:search, :search]), '#advanced_search', 'data-toggle'=>"tab" 
  .tab-content
    #basic_search.tab-pane.active
      = form_tag tools_path, :method => :get, :class => 'not_dirty', :id => 'returns_form' do
        = text_field_tag(:search, ( params[:search] ? params[:search] : "" ), :title => "Search text in Tool Card")
        =image_tag 'Search.png', :width => 30, :height => 30, :onclick => "$('#returns_form').submit();"   
        =render :partial => 'shared/tic_search_results'
    #advanced_search.tab-pane
      = render :partial => 'advanced_search'
      =render :partial => 'shared/tic_search_results', :locals => {:@tools => @atools}
