!!!
%html
  %head
    %title
      The Choice Matrix
    %meta{:name => 'description', :content => 'The Choice Matrix'}
    = stylesheet_link_tag :all     
    = javascript_include_tag :defaults, 'jquery.spinner'
    = yield(:head)    
    = csrf_meta_tag 
    
%body
  .clear_both
  =render :partial => 'shared/users'
  .clear_both  
  %center
    %table{:cellpadding => 0, :cellspacing => 0, :border => 0}
      %tr
        %td#header{:align => 'center'}
          -if current_user
            =link_to image_tag('template/title_short.png',:width => 588, :height => 116, :style => 'margin:0px;padding:0px;float:left;'), root_path
            =link_to image_tag('template/header_admin.png', :style => 'margin:0px;padding:0px;float:left;'), '/admin'            
          -else
            =link_to image_tag('template/header_title.png', :style => 'margin:0px;padding:0px;float:left;'), root_path
          =link_to image_tag('template/header_about.png', :style => 'margin:0px;padding:0px;float:left;'), '/about'
          =link_to image_tag('template/header_guided.png', :style => 'margin:0px;padding:0px;float:left;'), '/guided'
          =link_to image_tag('template/header_search.png', :style => 'margin:0px;padding:0px;float:left;'), '/search'
          =link_to image_tag('template/header_reviews.png', :style => 'margin:0px;padding:0px;float:left;'), '/reviews'
      %tr
        -if @splash
          %td.splash
            .container
              %br
              %br
              %br
              #content
                %center
                  %table{:cellpadding => 0, :cellspacing => 0, :border => 0}
                    %tr
                      %td
                        =link_to image_tag('template/splash_button_about.png', :width => 200, :style => 'margin:0px;padding:0px;float:left;'), '/about'                  
                      %td
                        =link_to image_tag('template/splash_button_guided.png', :width => 200, :style => 'margin:0px;padding:0px;float:left;'), '/guided'                  
                    %tr
                      %td
                        =link_to image_tag('template/splash_button_search.png', :width => 200, :style => 'margin:0px;padding:0px;float:left;'), '/search'                  
                      %td
                        =link_to image_tag('template/splash_button_reviews.png', :width => 200, :style => 'margin:0px;padding:0px;float:left;'), '/reviews'                  
                %br
                %br
                %br                        
        -else
          %td.body
            .container
              %br
              %br
                #content
                  =render :partial => 'shared/flashes'
                  %br
                  = yield          
      %tr
        %td#footer{:height => 200, :valign => 'top'}
          =image_tag('template/footer.png')                                  


          

