.navbar
  .navbar-inner
    .container
      %a.btn.btn-navbar{'data-toggle' => 'collapse', 'data-target' => '.nav-collapse'}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      = link_to 'THE CHOICE MATRIX', root_path, :id=>"logo", :class=>"brand nav_link", :style => 'font-size:24px;color:white;'

      .nav-collapse
        %ul.nav{:style => 'font-size: 120%'}
          %li= link_to "People",   people_path, :class => 'nav_link'
          %li= link_to "Green",    green_path, :class => 'nav_link'
          %li= link_to "Grow", grow_path, :class => 'nav_link'
          %li= link_to "Balanced", balanced_path, :class => 'nav_link'
          %li= link_to "Search", search_path, :class => 'nav_link'
          %li= link_to "Phases", phases_path, :class => 'nav_link'
        %ul.nav.pull-right{:style => 'font-size: 120%;color:white'}
          - if current_user.try(:is_admin?) 
            %li= link_to( t(:title,:scope=>[:admin]), admin_index_path , :class => 'nav_link')
          - if !['update', 'create'].include?(params[:action])
            - if I18n.locale != :fr
              %li= link_to t(:switchfrench), url_for(:locale => :fr), :class => 'nav_link'
            -else
              %li= link_to t(:switchenglish), url_for(:locale => :en), :class => 'nav_link'
          -if current_user    
            %li.dropdown
              =link_to '#', :class => 'dropdown-toggle', 'data-toggle' => 'dropdown', :class => 'nav_link' do
                =current_user.display_name
                &nbsp;
                =#image_tag(current_user.avatar_url, :height => 25, :width => 25) if current_user.avatar_url
                %b.caret
              %ul.dropdown-menu
                %li
                  =link_to 'Edit My Profile', edit_user_registration_path                                       
                %li
                  =link_to 'Sign out', destroy_user_session_path
            -else  
              %li=link_to( t(:login,:scope=>[:devise]), new_user_session_path )        
     