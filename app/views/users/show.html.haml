.page-header
  %h1
    =@user.display_name
    %small
      Reviews by user
      
.clear_both
%br
%br
-if !@user.reviews.any?
  This user has not reviewed any tools
-else
  %table.data
    %tr
      - if current_user.try(:is_admin?)
        %th
          Active
      %th
        Rating
      %th
        Tool
      %th
        Reviewed At
      %th
        Actions
    -if current_user.try(:is_admin?)
      -reviews = @user.reviews
    -else
      -reviews = @user.reviews.active
    -reviews.each do |r|
      %tr
        - if current_user.try(:is_admin?)
          %td
            =status_image(r.active?)
        %td
          =review_stars(r)
        %th
          = link_to r.tool.name, tool_path(r.tool)
        %td
          =r.created_at.strftime("%A, %B %d, %Y at %l:%M%p")
        %td
          %span{:style => 'white-space:nowrap'}
            =view_link tool_review_path(r.tool, r) 
            -if current_user.try(:is_admin?)
              |
              =link_to status_image(!r.active?) , toggle_active_admin_tool_review_path(r.tool, r) 